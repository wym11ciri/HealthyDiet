<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        app:elevation="0dp">

        <include layout="@layout/top_bar_style" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:orientation="vertical"
            app:layout_scrollFlags="scroll|enterAlways">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/layoutLeft2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivLeft"
                            android:layout_width="23dp"
                            android:layout_height="23dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:src="@mipmap/restaurant_1" />

                        <TextView
                            android:id="@+id/tvLeft2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="附近餐厅"
                            android:textColor="@color/recommend_text_normal"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <View
                        android:id="@+id/viewLeft"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/recommend_line_normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/layoutRight"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivRight"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:src="@mipmap/restaurant_2" />

                        <TextView
                            android:id="@+id/tvRight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="推荐饮食"
                            android:textColor="@color/recommend_text_select"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <View
                        android:id="@+id/viewRight"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/recommend_line_select" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvType01"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="适合我的"
                    android:textColor="#272727"
                    android:textSize="12sp" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="11dp"
                    android:layout_marginTop="11dp"
                    android:background="#A7A7A7" />

                <TextView
                    android:id="@+id/tvType02"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="销量最高"
                    android:textColor="#272727"
                    android:textSize="12sp" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="11dp"
                    android:layout_marginTop="11dp"
                    android:background="#A7A7A7" />

                <TextView
                    android:id="@+id/tvType03"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="距离最近"
                    android:textColor="#272727"
                    android:textSize="12sp" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="11dp"
                    android:layout_marginTop="11dp"
                    android:background="#A7A7A7" />

                <LinearLayout
                    android:id="@+id/layoutType04"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvType04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="类型"
                        android:textColor="#272727"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/ivType"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:src="@mipmap/up" />
                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#eeeeee" />
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/vpRecommend"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <LinearLayout
        android:id="@+id/layoutFloatButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="70dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/mButtonView"
            android:layout_width="0dp"
            android:layout_height="match_parent" />


        <ImageView
            android:id="@+id/ivTest"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:src="@mipmap/restaurant_button" />


    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>