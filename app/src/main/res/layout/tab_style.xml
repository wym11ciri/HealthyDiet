<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:layout_alignParentBottom="true"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:gravity="bottom"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/layoutTab01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivTab01"
                style="@style/bottom_tab_imageView"
                android:src="@mipmap/logo_5" />

            <TextView
                android:id="@+id/tvTab01"
                style="@style/bottom_tab_textView"
                android:text="饮食文章" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutTab02"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivTab02"
                style="@style/bottom_tab_imageView"
                android:src="@mipmap/logo_7" />

            <TextView
                android:id="@+id/tvTab02"
                style="@style/bottom_tab_textView"
                android:text="运动" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" />

        <RelativeLayout
            android:id="@+id/layoutTab04"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivTab04"
                style="@style/bottom_tab_imageView"
                android:src="@mipmap/logo_3" />

            <TextView
                android:id="@+id/tvTab04"
                style="@style/bottom_tab_textView"
                android:text="睡眠" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutTab05"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivTab05"
                style="@style/bottom_tab_imageView"
                android:src="@mipmap/logo_9" />

            <TextView
                android:id="@+id/tvTab05"
                style="@style/bottom_tab_textView"
                android:text="我 的" />
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layoutTab03"
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <View
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/tab_bg" />

        <ImageView
            android:id="@+id/ivTab03"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:src="@mipmap/logo_1" />

        <TextView
            android:id="@+id/tvTab03"
            style="@style/bottom_tab_textView"
            android:text="首 页" />
    </RelativeLayout>

</RelativeLayout>